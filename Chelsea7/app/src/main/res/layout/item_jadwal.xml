<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:layout_margin="10dp">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/jadwal_waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/md_keylines"
            android:layout_toRightOf="@+id/list_avatar"
            tools:text="Loading"
            android:textColor="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <TextView
                android:id="@+id/tim_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tim Home"
                android:layout_centerHorizontal="true"
                android:textColor="@color/dark_grey"
                android:textSize="16sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/skor_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/vs"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    tools:text="2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/vs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="VS"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="14sp" />



                <TextView
                    android:id="@+id/skor_away"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/vs"
                    android:layout_centerVertical="true"
                    tools:text="2"
                    android:layout_marginLeft="10dp"
                    android:textSize="14sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tim_away"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Tim Away"
                android:textColor="@color/dark_grey"
                android:textSize="16sp" />
        </LinearLayout>


        <ImageView
            android:id="@+id/img_away"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            tools:src="@mipmap/ic_launcher" />


    </RelativeLayout>



</LinearLayout>
